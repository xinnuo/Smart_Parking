<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yilanpark.smart_parking">

    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.yilanpark.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">
        <activity
            android:name="com.yilanpark.smart_parking.GuideActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yilanpark.smart_parking.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustNothing" />
        <activity
            android:name="com.yilanpark.smart_parking.BindActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.ForgetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.BillActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.TicketActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.CarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.CarAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.CarBindActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.CarBillActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.WalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.FeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.PasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yilanpark.smart_parking.SearchActivity"
            android:screenOrientation="portrait" />

        <!-- 支付宝 start -->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.alipay.sdk.app.H5AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <!-- 支付宝 end -->

        <!-- 微信支付 start -->
        <meta-data
            android:name="WX_APPID"
            android:value="wxefefe03c928c5c53" />

        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <!-- 微信支付 end -->


        <!-- JPush start -->
        <!-- JPush 用户自定义的广播接收器 -->
        <receiver
            android:name="com.yilanpark.receiver.JPushReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.REGISTRATION" /> <!-- Required  用户注册SDK的intent -->
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED" /> <!-- Required  用户接收SDK消息的intent -->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED" /> <!-- Required  用户接收SDK通知栏信息的intent -->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED" /> <!-- Required  用户打开自定义通知栏的intent -->
                <action android:name="cn.jpush.android.intent.CONNECTION" /> <!-- 接收网络变化 连接/断开 since 1.6.3 -->
                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>

        <!-- Required since 3.0.7 -->
        <!-- 新的tag/alias接口结果返回需要开发者配置一个自定的广播 -->
        <!-- 该广播需要继承JPush提供的JPushMessageReceiver类, 并如下新增一个 Intent-Filter -->
        <receiver
            android:name="com.yilanpark.receiver.JPushMessageReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE" />
                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>
        <!-- JPush end -->

    </application>

</manifest>