<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/Font15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:drawableStart="@mipmap/login_icon01"
        android:drawablePadding="@dimen/dimen_size_10"
        android:gravity="center_vertical"
        android:text="手机" />

    <EditText
        android:id="@+id/et_tel"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@color/transparent"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_size_10"
        android:paddingEnd="@dimen/dimen_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <TextView
        style="@style/Font15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:drawableStart="@mipmap/login_icon03"
        android:drawablePadding="@dimen/dimen_size_10"
        android:gravity="center_vertical"
        android:text="验证码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_yzm"
            style="@style/Font14_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="@dimen/dimen_size_10"
            android:paddingEnd="@dimen/dimen_size_10" />

        <TextView
            android:id="@+id/tv_yzm"
            style="@style/Font13_light"
            android:layout_width="@dimen/dimen_size_100"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:background="@drawable/rec_bg_ova_trans_stroke_lighter"
            android:gravity="center"
            android:onClick="doClick"
            android:text="获取验证码" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <TextView
        style="@style/Font15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:drawableStart="@mipmap/login_icon02"
        android:drawablePadding="@dimen/dimen_size_10"
        android:gravity="center_vertical"
        android:text="新密码" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@color/transparent"
        android:hint="请输入6~20位新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingStart="@dimen/dimen_size_10"
        android:paddingEnd="@dimen/dimen_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_login"
            style="@style/Font15_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:text="登录"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_sign"
            style="@style/Font15_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:text="注册"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_submit"
        style="@style/Font15_white_borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_ova_blue"
        android:onClick="doClick"
        android:text="提交" />

</LinearLayout>