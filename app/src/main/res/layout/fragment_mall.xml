<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/Font15_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_48"
        android:gravity="center"
        android:padding="@dimen/dimen_size_3"
        android:text="车品商城"
        android:textSize="@dimen/sp_size_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <ImageView
        android:layout_width="@dimen/dimen_size_80"
        android:layout_height="@dimen/dimen_size_80"
        android:layout_marginTop="@dimen/dimen_size_100"
        android:src="@mipmap/icon_wait"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/Font15_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_20"
        android:padding="@dimen/dimen_size_3"
        android:text="开发中，敬请期待..." />

</LinearLayout>