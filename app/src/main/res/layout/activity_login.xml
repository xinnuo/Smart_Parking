<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/Font15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:drawableStart="@mipmap/login_icon01"
        android:drawablePadding="@dimen/dimen_size_10"
        android:gravity="center_vertical"
        android:text="手机" />

    <EditText
        android:id="@+id/et_tel"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_45"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@color/transparent"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_size_10"
        android:paddingEnd="@dimen/dimen_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <TextView
        style="@style/Font15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_15"
        android:drawableStart="@mipmap/login_icon02"
        android:drawablePadding="@dimen/dimen_size_10"
        android:gravity="center_vertical"
        android:text="密码" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_45"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@color/transparent"
        android:hint="请输入6~20位登录密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingStart="@dimen/dimen_size_10"
        android:paddingEnd="@dimen/dimen_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_forget"
            style="@style/Font15_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:text="忘记密码"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_register"
            style="@style/Font15_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:text="注册"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_login"
        style="@style/Font15_white_borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_40"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:layout_marginEnd="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_ova_blue"
        android:onClick="doClick"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_50"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:gravity="center|center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1"
                android:background="@color/lighter" />

            <TextView
                style="@style/Font14_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_size_20"
                android:layout_marginEnd="@dimen/dimen_size_20"
                android:text="快捷登录" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height"
                android:layout_weight="1"
                android:background="@color/lighter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_30"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_wx"
                android:layout_width="@dimen/dimen_size_50"
                android:layout_height="@dimen/dimen_size_50"
                android:onClick="doClick"
                android:src="@mipmap/login_icon04"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/Font14_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_5"
                android:text="微信" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>