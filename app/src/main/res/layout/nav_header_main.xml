<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <com.sunfusheng.glideimageview.GlideImageView
        android:id="@+id/nav_img"
        android:layout_width="@dimen/dimen_size_60"
        android:layout_height="@dimen/dimen_size_60"
        android:onClick="doClick"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_user"
        app:riv_is_circle="true" />

    <TextView
        android:id="@+id/nav_title"
        style="@style/Font15_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:text="昵称" />

    <TextView
        android:id="@+id/nav_desc"
        style="@style/Font13_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_5"
        android:layout_marginBottom="@dimen/dimen_size_10"
        android:text="手机号" />

</LinearLayout>
