<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_size_15">

            <ImageView
                android:id="@+id/item_car_img"
                android:layout_width="@dimen/dimen_size_25"
                android:layout_height="@dimen/dimen_size_25"
                android:src="@mipmap/personal_icon10"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_car_title"
                style="@style/Font14_gray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_size_10"
                android:layout_weight="1"
                android:text="标题" />

            <TextView
                android:id="@+id/item_car_del"
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_size_25"
                android:background="@drawable/rec_bg_red_r5"
                android:gravity="center"
                android:paddingStart="@dimen/dimen_size_15"
                android:paddingEnd="@dimen/dimen_size_15"
                android:text="删除" />

        </LinearLayout>

        <View
            android:id="@+id/item_car_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_car_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>