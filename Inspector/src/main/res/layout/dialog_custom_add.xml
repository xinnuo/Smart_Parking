<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_bg_background_r10"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/Font15_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_size_20"
        android:text="新建组名称"
        android:textSize="@dimen/sp_size_16" />

    <EditText
        android:id="@+id/dialog_name"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:layout_marginEnd="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_white_r5"
        android:hint="请输入新建组名称"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_size_10"
        android:paddingEnd="@dimen/dimen_size_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_20"
        android:layout_marginEnd="@dimen/dimen_size_20">

        <TextView
            android:id="@+id/dialog_cancel"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_d9d9d9_r5"
            android:gravity="center"
            android:text="取消" />

        <View
            android:layout_width="@dimen/dimen_size_20"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/dialog_sure"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_40"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_blue_r5"
            android:gravity="center"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>