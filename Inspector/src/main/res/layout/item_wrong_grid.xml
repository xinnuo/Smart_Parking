<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dimen_size_90"
        android:layout_height="@dimen/dimen_size_90"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/item_wrong_img"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/index_icon14"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/item_wrong_del"
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dimen_size_5"
            android:paddingTop="@dimen/dimen_size_2"
            android:paddingEnd="@dimen/dimen_size_2"
            android:paddingBottom="@dimen/dimen_size_5"
            android:src="@mipmap/index_icon15"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</RelativeLayout>